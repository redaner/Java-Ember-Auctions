# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#   GET     /api/v1/health                         controllers.Application.index

# User handling
POST    /api/v1/register                       controllers.UserController.register

POST    /api/v1/login                          controllers.UserController.login

GET     /api/v1/getCurrentUser                 controllers.UserController.getCurrentUser

GET     /api/v1/logout                         controllers.UserController.logout

# Product handling
GET     /api/v1/getAllProducts                 controllers.ProductController.getAllProducts

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                 controllers.Assets.versioned(path="/public/assets", file: Asset)
GET     /fonts/*file                                  controllers.Assets.versioned(path="/public/fonts", file: Asset)
GET     /images/*file                                 controllers.Assets.at(path="/public/images", file)

GET     /                                             controllers.Application.index(slug = "")
GET     /*slug                                        controllers.Application.index(slug)