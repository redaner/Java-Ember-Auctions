<div class="container register-container">
    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            <form {{action 'register' on='submit' }}>
                <div class="row login-title">
                    <div class="login-title-inner">
                        REGISTER
                    </div>
                </div>
                <div class="row row-input">
                    {{input id="first-name" type="text" placeholder="First name" class="form-control input-md login-input" value=firstName }}
                </div>
                <div class="row row-input">
                    {{input id="last-name" type="text" placeholder="Last name" class="form-control input-md login-input" value=lastName }}
                </div>
                <div class="row row-input">
                    {{input id="register-email" type="text" placeholder="Email" class="form-control input-md login-input" value=email}}
                </div>
                <div class="row row-input">
                    {{input id="phone-number" type="text" placeholder="Phone number" class="form-control input-md login-input" value=phoneNumber}}
                </div>
                <div class="row row-input">
                    <select required name="user-type" id="user-type" onchange={{action "updateUserType" value="target.value"}}>
                        <option selected disabled value=""> Choose user type </option>
                        {{#each model.userTypes as |userType|}}
                            <option>
                                {{userType}}
                            </option>
                        {{/each}}
                    </select>
                </div>
                <div class="row row-input">
                    {{input id="register-password" type="password" placeholder="Password" class="form-control input-md login-input" value=password}}
                </div>
                <div class="row row-input">
                    {{input id="register-confirm-password" type="password" placeholder="Confirm password" class="form-control input-md login-input" value=confirmPassword}}
                </div>
                <div class="row row-input">
                    {{input id="submit" value="REGISTER" type="submit" class="submit-btn form-control input-md login-input" }}
                </div>
            </form>
        </div>
        <div class="col-md-4">

        </div>
    </div>
    
</div>