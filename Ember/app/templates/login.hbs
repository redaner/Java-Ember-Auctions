<div class="container login-container">
    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            <form {{action 'login' on='submit' }}>
                <div class="row login-title">
                    <div class="login-title-inner">
                        LOGIN
                    </div>
                </div>
                <div class="row row-input">
                    {{input id="email" type="text" placeholder="Email" class="form-control input-md login-input" value=email}}
                </div>
                <div class="row row-input">
                    {{input id="password" type="password" placeholder="Password" class="form-control input-md login-input" value=password}}
                </div>
                <div class="row row-input">
                    {{input id="submit" value="LOG IN" type="submit" placeholder="Login" class="submit-btn form-control input-md login-input" }}
                </div>
            </form>
        </div>
        <div class="col-md-4">

        </div>
    </div>
    <div class="row register-new-to-button">
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            New to Auctions? {{#link-to "register"}} Register here! {{/link-to}}
        </div>
        <div class="col-md-4">

        </div>

    </div>
</div>